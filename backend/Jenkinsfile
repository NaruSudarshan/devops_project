pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code...'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('backend') {
                    sh 'pip3 install -r requirements.txt'
                }
            }
        }

        stage('Restart Backend') {
            steps {
                sh 'pm2 restart flask-backend || pm2 start backend/app.py --name flask-backend --interpreter python3'
            }
        }
    }
}
